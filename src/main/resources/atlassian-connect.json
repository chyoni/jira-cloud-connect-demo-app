{
  "key": "${addon.key}",
  "baseUrl": "${addon.base-url}",
  "name": "Demo App",
  "authentication": {
    "type": "jwt"
  },
  "lifecycle": {
    "installed": "/installed",
    "uninstalled": "/uninstalled"
  },
  "scopes": ["READ", "WRITE"],

  "modules": {
    "generalPages": [
      {
        "key": "board",
        "url": "/board",
        "name": {
          "value": "Board"
        }
      }
    ],
    "dialogs": [
      {
        "url": "/board/new",
        "options": {
          "size": "fullscreen",
          "header": {
            "value": "Example"
          }
        },
        "key": "board-new"
      },
      {
        "url": "/board/article?articleId=${param.articleId}",
        "options": {
          "size": "fullscreen",
          "header": {
            "value": "Article Details"
          }
        },
        "key": "article"
      }
    ]
  }
}
